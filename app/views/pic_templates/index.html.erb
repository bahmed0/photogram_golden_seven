<body>
    <div class="container">
      <div class="col-md-6">

<h1>All Photos</h1>

<a href="/photos/new">
  Add a new photo
</a>

<% @p.each do |photo| %>
  <div class="thumbnail">
    <img src= "<%= photo.source %>">

    <div class="caption">
      <p> <%= photo.caption %> </p>
    </div>
    <div>
      <a href="/photos/<%= photo.id %>" class="btn btn-default btn-block">
        Show Details
      </a>

      <a href="/photos/<%= photo.id %>/edit" class="btn btn-default btn-block">
        Edit
      </a>

      <a href="/delete_photo/<%= photo.id %>" class="btn btn-default btn-block">
        Delete
      </a>
    </div>
  </div>
<% end %>
</div>
</div>
</body>
  